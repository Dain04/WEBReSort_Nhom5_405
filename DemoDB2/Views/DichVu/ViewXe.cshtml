@model IEnumerable<DemoDB2.Models.Xe>
@{
    ViewBag.Title = "ViewXe";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
}
<br /><br />
<div class="container mt-4">
    <h2>Quản lý xe</h2>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <a href="@Url.Action("TrangChuNV", "HomeNV")" class="btn btn-success mr-2">
                Trang Chủ
            </a>
            @Html.ActionLink("Thêm xe mới", "CreateXe", null, new { @class = "btn btn-success" })
        </div>
        @using (Html.BeginForm("ViewXe", "DichVu", FormMethod.Get, new { @class = "form-inline" }))
        { 
            <div class="input-group">
                <input type="text" name="_name" class="form-control" placeholder="Tìm kiếm..." />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                       Tìm kiếm
                    </button>
                </div>
            </div>
        }
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.XeID)</th>
                <th>@Html.DisplayNameFor(model => model.HieuXe)</th>
                <th>@Html.DisplayNameFor(model => model.BienSoXe)</th>
                <th>@Html.DisplayNameFor(model => model.TaiXe)</th>
                <th>@Html.DisplayNameFor(model => model.SoChoNgoi)</th>
                <th>@Html.DisplayNameFor(model => model.GiaXe)</th>
                <th>@Html.DisplayNameFor(model => model.ImageXe)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.XeID)</td>
                    <td>@Html.DisplayFor(modelItem => item.HieuXe)</td>
                    <td>@Html.DisplayFor(modelItem => item.BienSoXe)</td>
                    <td>@Html.DisplayFor(modelItem => item.TaiXe)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoChoNgoi)</td>
                    <td>@Html.DisplayFor(modelItem => item.GiaXe)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageXe))
                        {
                            <img src="@Url.Content(item.ImageXe)" alt="Hình ảnh xe" class="img-thumbnail" style="width:100px;height:auto;" />
                        }
                        else
                        {
                            <span class="text-muted">Không có hình ảnh</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Sửa", "EditXe", new { id = item.XeID }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Xóa", "DeleteXe", new { id = item.XeID }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .btn-group .btn {
        margin-right: 5px;
    }

    .table th, .table td {
        vertical-align: middle;
    }
</style>