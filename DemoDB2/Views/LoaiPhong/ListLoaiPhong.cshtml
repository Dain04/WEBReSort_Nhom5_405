@using DemoDB2.Models
@model  List<LoaiPhong>


<ul style="list-style-type:none" id="div-u">
    @{
        foreach (var item in Model)
        {
            <li class="div-cate">
                @Html.ActionLink(item.TenLoai, "Index", "Phong", new { category = item.IDLoai.Trim() }, "")
            </li>
        }
    }
</ul> 
<style>
    #div-u {
        padding-top: 10px;
        background-color: #009966;
        text-decoration: none;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: row;
        margin-bottom: 0px;
        flex-wrap: nowrap;
    }

    .div-cate {
        height: 40px;
        width: 100%;
    }

    a {
        color: #a94442;
        text-decoration: none;
        font-size: x-large;
        color: white;
    }

        a:hover {
            text-decoration: none;
        }
</style>